        .tab-treatments-cosmetic__services-title More Services
        .tab-treatments-cosmetic__service-container
          swiper.tab-treatments-cosmetic__services(:options='swiperOption')
            swiperSlide.tab-treatments-cosmetic__service(v-for='(blog, j) in allBlogs', :key='j', v-if='!blog.tags.includes(8)')
              .tab-treatments-cosmetic__service-image-container(@click='visitBlog(blog.slug)')
                .tab-treatments-cosmetic__service-image(:style='"backgroundImage: url(" + blog.acf.blog_posts.image + ");"')
              .tab-treatments-cosmetic__service-title(v-html='blog.acf.blog_posts.title', @click='visitBlog(blog.slug)')
              .tab-treatments-cosmetic__service-content(v-html='truncateService(blog.acf.blog_posts.content)')
              .tab-treatments-cosmetic__service-see-more(@click='visitBlog(blog.slug)') See More...
          .tab-treatments-cosmetic__container-pagination(v-if='numOfServices > 3')
            .tab-treatments-cosmetic__pagination(slot='pagination')
          .tab-treatments-cosmetic__prev-btn(v-if='numOfServices > 3')
            Icon(name='LeftCarot')
          .tab-treatments-cosmetic__next-btn(v-if='numOfServices > 3')
            Icon(name='RightCarot')
        .tab-treatments-cosmetic__service-index
          .tab-treatments-cosmetic__service-link(v-for='(blog, k) in allBlogs', :key='k', @click='visitBlog(blog.slug)')
